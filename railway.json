{
  "services": [
    {
      "name": "user",
      "rootDir": "backend",
      "dockerfilePath": "services/user_service/Dockerfile",
      "startCommand": "uvicorn main:app --host 0.0.0.0 --port 8001",
      "watch": [
        "backend/common/**",
        "backend/services/user_service/**",
        "backend/requirements/user_service.txt"
      ]
    },
    {
      "name": "project",
      "rootDir": "backend",
      "dockerfilePath": "services/project_service/Dockerfile",
      "startCommand": "uvicorn main:app --host 0.0.0.0 --port 8002",
      "watch": [
        "backend/services/project_service/**",
        "backend/requirements/project_service.txt"
      ]
    },
    {
      "name": "analytics",
      "rootDir": "backend",
      "dockerfilePath": "services/analytics_service/Dockerfile",
      "startCommand": "uvicorn main:app --host 0.0.0.0 --port 8003",
      "watch": [
        "backend/services/analytics_service/**",
        "backend/requirements/analytics_service.txt"
      ]
    },
    {
      "name": "notification",
      "rootDir": "backend",
      "dockerfilePath": "services/notification_service/Dockerfile",
      "startCommand": "uvicorn main:app --host 0.0.0.0 --port 8004",
      "watch": [
        "backend/services/notification_service/**",
        "backend/requirements/notification_service.txt"
      ]
    },
    {
      "name": "scheduler",
      "rootDir": "backend",
      "dockerfilePath": "services/scheduler_service/Dockerfile",
      "startCommand": "uvicorn main:app --host 0.0.0.0 --port 8005",
      "watch": [
        "backend/services/scheduler_service/**",
        "backend/requirements/scheduler_service.txt"
      ]
    },
    {
      "name": "realtime-gateway",
      "rootDir": "backend",
      "dockerfilePath": "services/realtime_gateway/Dockerfile",
      "startCommand": "uvicorn main:app --host 0.0.0.0 --port 9000",
      "watch": [
        "backend/services/realtime_gateway/**",
        "backend/requirements/realtime_gateway.txt"
      ]
    },
    {
      "name": "ai",
      "rootDir": "backend",
      "dockerfilePath": "services/ai_service/Dockerfile",
      "startCommand": "uvicorn main:app --host 0.0.0.0 --port 8006",
      "watch": [
        "backend/services/ai_service/**",
        "backend/requirements/ai_service.txt"
      ]
    },
    {
      "name": "frontend",
      "rootDir": "frontend",
      "dockerfilePath": "Dockerfile",
      "startCommand": "nginx -g 'daemon off;'",
      "watch": [
        "frontend/**"
      ]
    },
    {
      "name": "nginx-proxy",
      "rootDir": "backend/nginx",
      "dockerfilePath": "Dockerfile",
      "startCommand": "nginx -g 'daemon off;'",
      "watch": [
        "backend/nginx/**"
      ]
    }
  ]
}
